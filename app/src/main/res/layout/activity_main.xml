<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.circle.payments.MainActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bnav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        app:itemBackground="@drawable/bnav_background_color"
        app:itemIconTint="@drawable/bnav_text_color"
        app:itemTextColor="@drawable/bnav_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bnav" />

    <EditText
        android:id="@+id/BRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Amount in BRL"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/coins"
        android:layout_width="199dp"
        android:layout_height="296dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="152dp"
        app:layout_constraintBottom_toTopOf="@+id/bnav"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="165dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="22dp"
            android:text="LTC"
            app:layout_constraintBottom_toTopOf="@+id/ETH"
            app:layout_constraintTop_toBottomOf="@+id/BTC"
            app:layout_constraintVertical_chainStyle="packed"
            tools:layout_editor_absoluteX="275dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="162dp"
            android:layout_marginTop="10dp"
            android:text="ETH"
            app:layout_constraintBottom_toTopOf="@+id/bnav"
            app:layout_constraintTop_toBottomOf="@+id/LTC"
            tools:layout_editor_absoluteX="275dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/CPT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/coins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BRL"
        app:layout_constraintVertical_bias="0.666" />

</android.support.constraint.ConstraintLayout>
